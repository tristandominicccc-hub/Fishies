sellBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
sellBtn.Font = Enum.Font.GothamBold
sellBtn.TextSize = 11
sellBtn.Parent = MiscScroll

local sellCorner = Instance.new("UICorner")
sellCorner.CornerRadius = UDim.new(0, 6)
sellCorner.Parent = sellBtn

sellBtn.MouseButton1Click:Connect(function()
    pcall(function()
        game:GetService("ReplicatedStorage")
            :WaitForChild("rbxts_include")
            :WaitForChild("node_modules")
            :WaitForChild("@rbxts")
            :WaitForChild("remo")
            :WaitForChild("src")
            :WaitForChild("container")
            :WaitForChild("sellFish.sellAllFish")
            :FireServer()
    end)
end)

-- MISC TAB: PROPER ANTI-AFK SYSTEM
local antiAfkEnabled = false
local afkStartTime = 0

local afkToggle = Instance.new("TextButton")
afkToggle.Size = UDim2.new(1, -10, 0, 40)
afkToggle.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
afkToggle.Text = "Anti-AFK: OFF"
afkToggle.TextColor3 = Color3.fromRGB(255, 100, 100)
afkToggle.Font = Enum.Font.GothamBold
afkToggle.TextSize = 11
afkToggle.Parent = MiscScroll

local afkCorner = Instance.new("UICorner")
afkCorner.CornerRadius = UDim.new(0, 6)
afkCorner.Parent = afkToggle

local afkTimerLabel = Instance.new("TextLabel")
afkTimerLabel.Size = UDim2.new(1, -10, 0, 25)
afkTimerLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
afkTimerLabel.Text = "Uptime: 00:00:00"
afkTimerLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
afkTimerLabel.Font = Enum.Font.Gotham
afkTimerLabel.TextSize = 9
afkTimerLabel.Parent = MiscScroll

local afkTimerCorner = Instance.new("UICorner")
afkTimerCorner.CornerRadius = UDim.new(0, 6)
afkTimerCorner.Parent = afkTimerLabel

afkToggle.MouseButton1Click:Connect(function()
    antiAfkEnabled = not antiAfkEnabled
    if antiAfkEnabled then
        afkToggle.BackgroundColor3 = Color3.fromRGB(60, 180, 80)
        afkToggle.Text = "Anti-AFK: ON"
        afkToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
        afkStartTime = tick()
        print("ðŸŸ¢ Anti-AFK Enabled - You can stay online for days!")
    else
        afkToggle.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
        afkToggle.Text = "Anti-AFK: OFF"
        afkToggle.TextColor3 = Color3.fromRGB(255, 100, 100)
        afkTimerLabel.Text = "Uptime: 00:00:00"
        print("ðŸ”´ Anti-AFK Disabled")
    end
end)

-- Proper Anti-AFK System (NO AUTO KICK)
task.spawn(function()
    while task.wait(1) do
        if antiAfkEnabled then
            local uptime = tick() - afkStartTime
            local hours = math.floor(uptime / 3600)
            local minutes = math.floor((uptime % 3600) / 60)
            local seconds = math.floor(uptime % 60)
            afkTimerLabel.Text = string.format("Uptime: %02d:%02d:%02d", hours, minutes, seconds)
            
            -- Simulate activity every 2 minutes to prevent AFK kick
            if uptime % 120 < 1 then
                -- Simulate small camera movement
                local camera = workspace.CurrentCamera
                if camera then
                    camera.CFrame = camera.CFrame * CFrame.Angles(0, math.rad(1), 0)
                end
            end
        end
    end
end)

-- Update canvas sizes when layout changes
local function updateCanvasSize(layout, scroll)
    layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        scroll.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y + 10)
    end)
end

updateCanvasSize(ShopListLayout, ShopScroll)
updateCanvasSize(GearListLayout, GearScroll)
updateCanvasSize(EggListLayout, EggScroll)
updateCanvasSize(MerchantListLayout, MerchantScroll)
updateCanvasSize(EventListLayout, EventScroll)
updateCanvasSize(MiscListLayout, MiscScroll)
